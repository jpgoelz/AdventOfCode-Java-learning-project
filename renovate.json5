{
    $schema: "https://docs.renovatebot.com/renovate-schema.json",
    extends: ["config:base", ':semanticCommitsDisabled'],

    forkProcessing: true,

    addLabels: ["Renovate"],

    // Do not limit pull requests.
    prConcurrentLimit: 0,
    prHourlyLimit: 0,

    lockFileMaintenance: { enabled: true },

    packageRules: [
        // Update the lockfile (package-lock.json) if a new version of an NPM package within the range specified in
        // package.json is available. Then bump the version range in the package.json, to ensure that at least the new
        // version is in use. See https://docs.renovatebot.com/configuration-options/#rangestrategy.
        {
            matchManagers: ["npm"],
            rangeStrategy: "bump",
        },
    ],
}
